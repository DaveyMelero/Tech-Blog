<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="post-name">Post Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
{{!--       <div class="form-group">
        <label for="project-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div> --}}
      <div class="form-group">
        <label for="post-desc">Post Description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if post.length}}
  <div class="col-md-6 project-list">
    <h3>Current Post:</h3>

    {{#each post as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

  <button class="comment-btn" data-id={{id}}>Comment</button>
 <button class="delete-btn" data-id={{id}}>Delete</button>
  <div class="comments">
    <!-- Comments will be dynamically added here -->
  </div>
</div>





<script src="./js/post.js"></script>





